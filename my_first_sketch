void setup()
{
  Serial.begin(9600);
  pinMode(13, OUTPUT);      
  Serial.println("系统就绪"); 
}

void loop()
{   
  if (Serial.available() > 0) 
  {
    String a = Serial.readStringUntil('\n'); 
    if(a == "begin")
    {
      Serial.println("执行命令...");
      delay(1000);
      digitalWrite(13,HIGH);
      delay(1000);
      digitalWrite(13,LOW);
      delay(2000);
      Serial.println("hello world");
    }
  }
  delay(100);
}
